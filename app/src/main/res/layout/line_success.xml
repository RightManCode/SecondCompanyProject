<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/write"
    android:orientation="vertical">

    <TextView
        android:id="@+id/line_success_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:paddingBottom="18px"
        android:paddingLeft="35px"
        android:paddingTop="15px"
        tools:text="转账成功："
        android:textColor="@color/red"
        android:textSize="45px" />

    <ImageView
        android:layout_width="match_parent"
        android:src="@color/colorAccent"
        android:layout_height="1dp" />

    <TextView
        android:paddingLeft="45px"
       android:paddingRight="45px"
        android:id="@+id/line_success_from_to"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="30px"
        android:paddingBottom="30px"
        android:layout_weight="1"
        android:gravity="center"
        tools:text="HB电子游艺--> 我的钱包"
        android:textColor="@color/blank"
        android:textSize="35px" />


    <TextView
        android:id="@+id/line_success_money"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8px"
        android:paddingBottom="20px"
        android:layout_weight="1"
        android:gravity="center"
        tools:text="转账金额：100"
        android:textColor="@color/blank"
        android:textSize="35px" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="horizontal">

            <Button
                android:id="@+id/ld_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:text="取消"
                android:textColor="@color/colorAccent"
                android:textSize="30px" />

            <Button
                android:id="@+id/lo_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:text="确定"
                android:textColor="@color/colorAccent"
                android:textSize="30px" />

        </LinearLayout>


        <TextView
            android:id="@+id/tv_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:padding="30px"
            android:text="知道了"
            android:textColor="@color/colorAccent"
            android:textSize="28px" />

    </FrameLayout>


</com.zhy.autolayout.AutoLinearLayout>
